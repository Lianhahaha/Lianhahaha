public class EmployeeManagementSystem {
    
    // Employee class with attributes, constructor, and methods
    static class Employee {
        // Attributes (fields)
        private String name;
        private int employeeId;
        private String department;
        private double monthlySalary;

        // Constructor to initialize employee details
        public Employee(String name, int employeeId, String department, double monthlySalary) {
            this.name = name;
            this.employeeId = employeeId;
            this.department = department;
            this.monthlySalary = monthlySalary;
        }

        // Method to display employee details
        public void displayEmployeeDetails() {
            System.out.println("Employee Details:");
            System.out.println("Name: " + name);
            System.out.println("Employee ID: " + employeeId);
            System.out.println("Department: " + department);
            System.out.println("Monthly Salary: $" + monthlySalary);
        }

        // Method to calculate the annual salary (monthlySalary * 12)
        public double calculateAnnualSalary() {
            return monthlySalary * 12;
        }
    }

    // Main method for testing and demonstration
    public static void main(String[] args) {
        // Create Employee objects using the parameterized constructor
        Employee employee1 = new Employee("John Doe", 101, "HR", 5000.0);
        Employee employee2 = new Employee("Jane Smith", 102, "IT", 7000.0);
        Employee employee3 = new Employee("Alice Johnson", 103, "Finance", 6000.0);

        // Display employee details and calculate annual salary
        employee1.displayEmployeeDetails();
        System.out.println("Annual Salary: $" + employee1.calculateAnnualSalary());
        System.out.println();

        employee2.displayEmployeeDetails();
        System.out.println("Annual Salary: $" + employee2.calculateAnnualSalary());
        System.out.println();

        employee3.displayEmployeeDetails();
        System.out.println("Annual Salary: $" + employee3.calculateAnnualSalary());
    }
}
